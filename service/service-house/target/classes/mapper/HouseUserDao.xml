<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.guigu.dao.HouseUserDao">

    <!-- 用于select查询公用抽取的列 -->
    <sql id="columns">
		  select id, house_id, name, phone, sex, id_no, create_time, update_time, is_deleted
		  from db_house.hse_house_user
	</sql>
<!--    根据房源id查询房源的房东-->
    <select id="getHouseUserByHouseId" resultType="houseUser">
        <include refid="columns"></include>
        where house_id = #{houseId} and is_deleted = 0
    </select>
<!--添加房东-->
<insert id="insert">
    insert into db_house.hse_house_user(house_id,name,phone,sex,id_no)
    values(#{houseId},#{name},#{phone},#{sex},#{idNo})
</insert>
<!--根据Id查询-->
    <select id="getById" resultType="houseUser">
        <include refid="columns"></include>
        where id = #{id}
    </select>

<!--    更新房东信息-->
<update id="update">
    update db_house.hse_house_user
    <set>
        <if test="name != null and name != ''">
            name = #{name},
        </if>
        <if test="phone != null and phone != ''">
            phone = #{phone},
        </if>
        <if test="sex != null and sex != '' ">
            sex = #{sex},
        </if>
        <if test="idNo != null and idNo != ''">
            id_No = #{idNo},
        </if>
    </set>
        where id = #{id}
</update>
<!--        删除-->
        <update id="delete">
            update db_house.hse_house_user set is_deleted = 1
            where id = #{id}
        </update>
</mapper>


